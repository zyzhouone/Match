@using Model;
@using BLL;
@using Web;

@model List<tblmatchusers>

@{
    ViewBag.Title = "队伍信息";
    Layout = "~/Views/Shared/_Layout.View.cshtml";
}

@section MainContent{
    <div class="portlet-body form-horizontal form-bordered form-row-stripped">
        <div class="row-fluid">
            <div class="control-group">
                <label class="control-label"><span class="required">*</span>队伍名称：</label>
                <div class="controls">
                    <label class="m-wrap large">@Model[0].Teamname</label>
                </div>
            </div>
            @for(int i=0;i<Model.Count;i++)
            {
             <div class="control-group">
                <label class="control-label">队员：</label>
                <div class="controls">
                    <label class="m-wrap large">@Model[i].Nickname.PadRight(8, ' ')
                     @if(Model[i].Leader == 1){
                         @:<img src="@Url.Content("/Content/Images/leader.jpg")" style="width:30px;height:30px;"/>
                     }else
                     {
                         @:&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                     }
                    @Model[i].Mobile &nbsp; &nbsp; &nbsp; &nbsp;&nbsp;&nbsp;
                    
                    @switch (Model[i].isdown)
                    {
                        case "0":
                            <span>未推送</span>
                            break;
                        case "1":
                        <span>已推送</span>
                            break;
                        case "2":
                        <span>已下载</span>
                            break;
                        case "3":
                        <span>已清理</span>
                            break;
                        default:
                            break;
                    }
                    </label>
                </div>
            </div>
            }

           
        </div>
    </div>
}

