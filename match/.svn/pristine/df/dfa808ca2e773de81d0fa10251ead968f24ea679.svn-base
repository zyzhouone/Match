@using Model;
@using BLL;
@using Web;

@model tblpointsView
@{
    ViewBag.Title = "showcontent";
    Layout = "~/Views/Shared/_Layout.View.cshtml";
}
<link href="@Url.Content("~/assets/audioplayer/audioplayer.css")" rel="stylesheet" />
<div class="row-fluid">
    <div class="span3" style="text-align:right"><b>点标编号：</b></div><div class="span9">@Model.Pointno</div>
</div>
<div class="row-fluid">
    <div class="span3" style="text-align:right"><b>点标名称：</b></div><div class="span9">@Model.Pointname</div>
</div>
<div class="row-fluid">
    <div class="span3" style="text-align:right"><b>点标地址：</b></div><div class="span9">@Model.Pointaddress</div>
</div>
<div class="row-fluid">
    <div class="span3" style="text-align:right"><b>任务：</b></div><div class="span9"></div>
</div>
<div class="row-fluid">
    <div class="span1"></div>
    <div class="span10">
        <div id="s" style="display:none">@Model.Pointtask</div>
        <div id="d"></div>
    </div>
    <div class="span1"></div>
</div>
<div class="row-fluid">
    <div class="span3" style="text-align:right"><b>友情提示：</b></div><div class="span9"></div>
</div>
<div class="row-fluid">
    <div class="span1"></div><div class="span9">@Model.Pointout</div><div class="span1"></div>
</div>
@if (Model.Sketchmap != "" && Model.Sketchmap != null)
{
   <div class="row-fluid">
    <div class="span3" style="text-align:right"><b>示意图：</b></div><div class="span9"></div>
</div>
<div class="row-fluid">
    <div class="span1"></div><div class="span9"><img src="http://@HttpContext.Current.Request.Url.Host:@Request.Url.Port/UploadFiles/@Model.Sketchmap" style="width:350px;" /></div><div class="span1"></div>
</div> 
}
@if (Model.SketchVoice != "" && Model.SketchVoice != null)
{
    <div class="row-fluid">
    <div class="span3" style="text-align:right"><b>语音：</b></div><div class="span9"></div>
</div>
<div class="row-fluid">
    <div class="span1"></div><div class="span9"><audio src="http://@HttpContext.Current.Request.Url.Host:@Request.Url.Port/UploadFiles/@Model.SketchVoice" preload="auto" controls></audio></div><div class="span1"></div>
</div>
}

    <script type="text/javascript" src="@Url.Content("~/Assets/audioplayer/jquery.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Assets/audioplayer/audioplayer.js")"></script>
    <script>
        $(document).ready(function () {
            var html = $("#s").html();
            $("#d").append(htmldecode(html));
        });

        function htmlencode(s) {
            var div = document.createElement('div');
            div.appendChild(document.createTextNode(s));
            return div.innerHTML;
        }
        function htmldecode(s) {
            var div = document.createElement('div');
            div.innerHTML = s;
            return div.innerText || div.textContent;
        }
    </script>

