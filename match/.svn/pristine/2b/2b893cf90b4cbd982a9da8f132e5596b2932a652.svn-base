<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>
                队伍编号
            </th>
            <th>
                队伍名称
            </th>
            <th>
                公司名称
            </th>
            <th>
                线路类型
            </th>
            <th>
                线路名称
            </th>
            <th>
                当前标识点
            </th>
            <th>
                状态
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
            <tr>
                <td>
                    @m.teamno
                </td>
                <td>
                    <a class=" mini purple" href="@Url.Action("TeamUserScan", new { teamid = m.teamid })">
                        @m.teamname
                    </a>
                </td>
                <td>
                    @m.company
                </td>
                <td>
                    @m.linename
                </td>
                <td>
                    @m.linesname
                </td>
                <td>
                    @m.pointname
                </td>

                <td>
                    @if (m.eventid == 1)
                    {
                        @:已参赛
                       }
                    else if (m.eventid == 2)
                    {
                        @:已推送
                       }
                    else if (m.eventid == 3)
                    {
                        @:已完赛
                       }
                    else
                    {
                        @:状态异常
                       }
                </td>
                <td>
                    <a class="btn mini purple thickbox" title='编辑标识点' href="@Url.Action("RecordEdit", new { id = m.teamid })?TB_iframe=true&height=320&width=500">
                        <i class="icon-edit"></i>编辑标识点
                    </a>
                </td>

            </tr>
        }
    </tbody>
</table>

<div class="dataTables_paginate paging_bootstrap pagination">
    @Html.Pager(Model, new PagerOptions() { ShowTotalItemCount = true })
</div>