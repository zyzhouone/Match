@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="zh-cn"
      class=" js flexbox flexboxlegacy canvas canvastext webgl no-touch geolocation postmessage websqldatabase indexeddb hashchange history draganddrop websockets rgba hsla multiplebgs backgroundsize borderimage borderradius boxshadow textshadow opacity cssanimations csscolumns cssgradients cssreflections csstransforms csstransforms3d csstransitions fontface generatedcontent video audio localstorage sessionstorage webworkers applicationcache svg inlinesvg smil svgclippaths">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta charset="UTF-8">
    <title>用户登录</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="@Url.Content("/assets/css/website.css")" rel="stylesheet" />
    <link href="@Url.Content("/Content/styles/admin.main.css")" rel="stylesheet" />
    <meta class="foundation-data-attribute-namespace">
    <meta class="foundation-mq-xxlarge">
    <meta class="foundation-mq-xlarge">
    <meta class="foundation-mq-large">
    <meta class="foundation-mq-medium">
    <meta class="foundation-mq-small">
    <style></style>
    <meta class="foundation-mq-topbar">
</head>
<body class="auth-back">
    <div class="account-container">
        <div class="logo">
            <a href=""></a>
        </div>
        @using (Html.BeginForm())
        {
        <div class="wrapper">
            <h3 class="wrapper-title">用户登录</h3>
            <div class="row site-width">
                    <input type="hidden" name="return_to" value="">
                    <div class="small-12 columns">
                        <label for="username" class="tit">用户名：</label>
                        @Html.TextBox("username", string.Empty, new { @class = "form-text", placeholder = "用户名", data_val_required = "用户名不能为空", data_val = "true" })
                    </div>
                    <span class="help-block">@Html.ValidationMessage("username")</span>
                    <div class="small-12 columns">
                        <label for="username" class="tit">密码：</label>
                        @Html.Password("password", string.Empty, new { @class = "form-text", placeholder = "密码", data_val_required = "密码不能为空", data_val = "true" })
                    </div>
                    <div style="margin-bottom:10px;">@Html.ValidationMessage("error")</div>
                    <div class="small-12 columns">
                        <input type="submit" class="button radius success expand" value="立即登录">
                        <div class="reg-goto">
                            <!--<a href="">立即注册</a>&nbsp;&nbsp;&nbsp;<a href="">忘了密码？</a>-->
                        </div>
                    </div>
            </div>
        </div>
        }
        <div class="row site-width">
        </div>
    </div>
    <div class="reg-back"></div>
    @Scripts.Render("~/assets/lgjq")
    <script>
        jQuery(document).ready(function () {
            App.initLogin();
        });
    </script>

</body>
</html>

