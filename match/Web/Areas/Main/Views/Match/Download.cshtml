@using (Html.BeginForm("Delete", "Match", FormMethod.Post, new { id = "mainForm" }))
{
    <table class="table table-striped table-hover ">
        <thead>
            <tr>
                <th>
                    赛事名称
                </th>
                <th>
                    队伍名称
                </th>
                <th>
                    昵称
                </th>
                <th>
                    电话
                </th>
                <th>
                    证件号码
                </th>
                <th>
                    年龄
                </th>
                <th>
                    状态
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var m in Model)
            {
                <tr>
                    <td>
                        @m.match_name
                    </td>
                    <td>
                        @m.teamname
                    </td>
                    <td>
                        @m.nickname
                    </td>
                    <td>
                        @m.mobile
                    </td>
                    <td>
                        @m.cardno
                    </td>
                    <td>
                        @m.age
                    </td>
                    <td>
                       @if (m.isdown == "1")
                       {
                           @:已发放
                       }
                       else if (m.isdown == "2")
                       {
                            @:已下载
                       }
                       else if (m.isdown == "3")
                       {
                            @:已删除
                       }
                       else
                       {
                           @:状态异常
                       }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
<div class="dataTables_paginate paging_bootstrap pagination">
    @Html.Pager(Model, new PagerOptions() { ShowTotalItemCount = true })
</div>
<script type="text/javascript" src="@Url.Content("~/scripts/js/selector/jquery-1.10.js")"></script>
<script type="text/javascript">
    function export_Excel() {
        $.ajax({
            type: "POST",
            url: encodeURI("/Match/Download"),
            data: {},
            dataType: "text",
            success: function (data) {
                if (data != "") {
                    window.open("http://match.chengshidingxiang.com/data/" + data);
                } else {
                    alert("导出失败！");
                }
            }
        });
    }
</script>